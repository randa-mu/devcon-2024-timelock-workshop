{
  "name": "@randamu/blocklock-js",
  "version": "0.0.1",
  "description": "A library for encrypting ciphertext towards the future with the dcrypt network",
  "types": "index.d.ts",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run build:generate && npm run build:js",
    "build:generate": "mkdir -p src/generated && typechain --target ethers-v6 --out-dir src/generated '../smart-contracts/out/*.sol/*.json'",
    "build:js": "esbuild src/index.ts --bundle --platform=node --target=node22 --outfile=index.js",
    "build:types": "tsc --emitDeclarationOnly -d ./src/index.ts",
    "ci": "npm run build && npm run lint && npm run test",
    "clean": "rm -rf index.js index.d.ts src/generated/*",
    "lint": "eslint src",
    "lint:fix": "eslint --fix",
    "test": "jest ./test/*.test.ts"
  },
  "keywords": [
    "randomness",
    "vrf",
    "ethereum"
  ],
  "author": "azixus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/randa-mu/marshmono/issues"
  },
  "homepage": "https://github.com/randa-mu/marshmono#readme",
  "dependencies": {
    "@noble/curves": "^1.6.0",
    "@randamu/bls-bn254-js": "file:../bls-bn254-js",
    "buffer": "^6.0.3",
    "commander": "^12.1.0",
    "ethers": "^6.13.4",
    "js-sha3": "0.8.0",
    "smart-contracts": "file:../smart-contracts"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.5",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  },
  "engines": {
    "node": ">= 22.0.0"
  }
}
